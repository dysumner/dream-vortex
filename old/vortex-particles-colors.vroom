#!/usr/bin/env vroom-wrapper

from vroom import *

from dreamvortex.engines.particle import ParticleEngine

@LiveCoding.no_update
def init():
   Global.engine = ParticleEngine()

def frame():
   Global.engine.step()

def display():
   lighting(False)

   color(0.3)        #color for the grid
   draw(grid, 40, 40, 20, 20).at([-20, -10, -10])

   Global.engine.draw()
